<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    tools:context=".Attendance_Activity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/btnformate"
            android:gravity="center"
            android:onClick="CreateGesture"
            android:padding="14dp"
            android:text="CREATE GESTURE"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="228dp"
            android:layout_height="106dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/create"
            android:text="\n\n\t\t\t\t\t\t\t\t\tGenerated Gesture" />

        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="92dp"
            android:text="Right Hand"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/countdown"
            android:text="Left Hand"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="22dp"
            android:text="Eyes"
            android:visibility="invisible"/>


        <ImageView
            android:id="@+id/rightpic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/right"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp" />

        <ImageView
            android:id="@+id/leftpic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/left"
            android:layout_alignTop="@+id/rightpic" />

        <ImageView
            android:id="@+id/eyespic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/rightpic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentStart="true"
            android:text="DATE TIME LOCATION"
            android:textSize="12dp" />


        <!--<TextView
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="138dp"
            android:background="@drawable/btnformate"
            android:gravity="center"
            android:onClick="UploadImage"
            android:padding="14dp"
            android:text="UPLOAD IMAGE"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12dp" />-->

        <TextView
            android:id="@+id/capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="154dp"
            android:background="@drawable/btnformate"
            android:gravity="center"
            android:padding="14dp"
            android:text="CAPTURE IMAGE"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="136dp"
            android:text="00:00"
            android:textColor="@android:color/black"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="193dp"
            app:srcCompat="@drawable/immacby2tes" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="106dp"
            android:background="@drawable/btnformate"
            android:gravity="center"
            android:onClick="goback"
            android:padding="14dp"
            android:text="SUBMIT"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16dp" />


    </RelativeLayout>


</RelativeLayout>