        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/uploadid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btnformate"
                android:onClick="Upload1"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:padding="14dp"
                android:text="ID UPLOAD"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/uploadqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btnformate"
                android:onClick="Upload2"
                android:layout_weight="1"
                android:padding="14dp"
                android:layout_marginRight="20dp"
                android:text="QUALIFICATION UPLOAD"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="12dp" />

        </LinearLayout>

            <TextView
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btnformate"
                android:gravity="center"
                android:onClick="Second"
                android:padding="14dp"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp" />


        </LinearLayout>


    </ScrollView>





</LinearLayout>